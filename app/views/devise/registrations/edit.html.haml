%h2
  Edit #{resource_name.to_s.humanize}

= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
  = f.error_notification
  .form-group
    .form-inputs
      = f.input :avatar, as: :file
      -if current_user.avatar
        = image_tag(current_user.avatar.url(:medium))
  %p
  .form-inputs
    = f.input :email, required: true, autofocus: true
    - if devise_mapping.confirmable? && resource.pending_reconfirmation?
      %p
        Currently waiting confirmation for: #{resource.unconfirmed_email}
    = f.input :name, required: true
    = f.input :surname, required: true
    = f.input :phone, required: true
    = f.label :date_of_birth
    %br
    = f.date_select :date_of_birth, start_year: 1950, end_year: 2000, class: 'form-control', required: true
    %p
  .form-actions
    = f.button :submit, "Update profile", class: 'btn btn-success'

%h3 Change my password
%p
  = link_to "Change my password", edit_user_registration_path(change_password: true), class: 'btn btn-primary'

%h3 Cancel my account
%p
  =button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger'
